<html>
<head>
  
</head>

<body>

  <% if user_signed_in? %>
    <button>
    <%= link_to('Logout', destroy_user_session_path, method: :delete) %>        
    </button>
    <button><%= link_to "Click for surprise", new_post_path %></button>
  <% else %>
    <button>
    <%= link_to('Login', new_user_session_path)  %>  
    </button>
  <% end %>
  <br/>

  <h1>Hello <%= current_user.email %></h1>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Content</th>
      </tr>
    <thead>

    <tbody>
      <% @user_posts.each do |post| %>
        <tr>
          <td><%=post.title%></td>
          <td><%=post.content%></td>
          <td><%= link_to 'Edit', edit_post_path(post) %></td>
          <td><%= link_to 'Show', post_path(post) %></td>
          <td><%= link_to 'Delete', post_path(post),
            data: { confirm: "Are you sure?" }, method: :delete %></td>
        </tr>
      <% end %>
    <tbody>
  </table>
<button><%= link_to "Create new post", new_post_path %></button>

<h2>Other users posts</h2>
<table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Content</th>
      </tr>
    <thead>

    <tbody>
      <% @other_users_posts.each do |post| %>
        <tr>
          <td><%=post.title%></td>
          <td><%=post.content%></td>
        </tr>
      <% end %>
    <tbody>
  </table>

</body>
</html>

