<html>
<head>
  
</head>

<body>
  <p><%= notice %></p>
  
  <% if user_signed_in? %>
    <button>
    <%= link_to('Logout', destroy_user_session_path, method: :delete) %>        
    </button>
  <% else %>
    <button>
    <%= link_to('Login', new_user_session_path)  %>  
    </button>
  <% end %>
  <br/>

  <table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
    </tr>
  <thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%=post.title%></td>
        <td><%=post.content%></td>
      </tr>
    <% end %>
  <tbody>
  </table>
<button><%= link_to "Create new post", new_post_path %></button>

</body>
</html>

