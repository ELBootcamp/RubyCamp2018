<h1>Add new post</h1>
<%= form_for @post, url: {action: "create"} do |form| %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :content %>
    <%= form.text_field :content %>
  </div>

  <div class="actions">
    <%= form.submit "Add new post"%>
  </div>
<% end %>

<%= link_to 'Back', posts_path %>