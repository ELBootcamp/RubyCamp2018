<h1>Add new user</h1>
<%= form_for @user, url: {action: "create"} do |form| %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :age %>
    <%= form.text_field :age %>
  </div>

  <div class="actions">
    <%= form.submit "Add new user"%>
  </div>
<% end %>

<%= link_to 'Back', users_path %>