<html>
<head>
  <%= stylesheet_link_tag "index" %>
</head>

<body>
<p><%= notice %></p>
<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Age</th>
    </tr>
  <thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%=user.name%></td>
        <td><%=user.last_name%></td>
        <td><%=user.age%></td>
        <td><%= link_to "Show", user_path(user) %></td>
        <td><%= link_to "Edit", edit_user_path(user) %></td>
        <td><%= link_to "Destroy", user_path(user), 
              method: :delete,
              data: { confirm: 'Are you sure?' }%></td>
      </tr>
    <% end %>
  <tbody>
</table>


<br/>
<button><%= link_to "Add user", new_user_path %></button>

</body>
</html>