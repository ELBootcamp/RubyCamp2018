<!doctype html>

<html lang="en">
<head>
  <meta charset="utf-8">
  <title>Weather</title>
</head>

<body>
  <div class="main">
    <form class="form">
      <label for="city_name">Type city name:</label>
      <input name="city_name" />
      <input type="submit" value="Submit" class="button" >
    </form>
    <div class="response">
    <% unless @error_msg %>
      <% @weather_data.each.with_index do |day, i| %>
        <p> Day <%= (i + 1)%> </p>
        Min temperature: <%= day['Min_temperature'] %><br>
        Max temperature: <%= day['Max_temperature'] %><br>
        Rain fall: <%= day['Rain_fall'] %><br>
      <% end %>
    <% else %>
      <%= @error_msg %>
    <% end %>
    </div>
  </div>
</body>
</html>
